# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java files
[*.java]
charset = utf-8
indent_style = space
indent_size = 4

# Properties files
[*.properties]
charset = utf-8

# SQL files
[*.sql]
charset = utf-8

# Markdown files
[*.md]
charset = utf-8
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

# JSON files
[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# XML files
[*.xml]
charset = utf-8
indent_style = space
indent_size = 2 